@model prjMvcCoreDemo.Models.TProduct

@{
    ViewData["Title"] = "AddToCart";
}

<h1>加入購物車作業</h1>

<h4>請輸入購買量</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <h4>數量</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <input type="hidden" name="txtFid" value="@Model.FId" />
                <div class="col-md-10">
                    數量<br>
                    @Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
